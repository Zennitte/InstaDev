@model Post

@{
    ViewData["Title"] = "Perfil";
}

<header>
    <div class="container">
        <div class="logo"><img src="~/imgPerfil/Instadev.png"></div>
        <div class="img-lupa">
            <img src="~/imgPerfil/lupa.png" alt="lupa">
            <input placeholder="Pesquisar" class="pesquisa" type="search">
        </div>
        <nav class="nav_header">
            <a class="home" asp-area="" asp-controller="Feed" asp-action="Listar"><img src="~/imgPerfil/home.png" alt="link casa"></a>
            <a class="plane" href=""><img src="~/imgPerfil/plane 1.png" alt="Link avião"></a>
            <a class="compass" href=""><img src="~/imgPerfil/compass 1.png" alt="Link bússola"></a>
            <a class="heart" href=""><img src="~/imgPerfil/VectorCoração.png" alt="Link coração"></a>
            <a class="profile" href=""><img style="width: 100%; height: 100%; border-radius: 50px;" src="~/img/Perfil/perfil.png" alt=""></a>
        </nav>
    </div>
</header>

<div class="container container_main">
    <section class="profile_informations">

        <div class="photo_profile">
            <img style="width: 100%; height: 100%; border-radius: 115.5px;" src="~/img/Perfil/perfil.png" alt="imagem perfil">
        </div>

        <div class="inf_box">
            <h1>@ViewBag.UserName</h1>
            <div class="text_list">
                <div>
                    <span>12</span>
                    <span>publicações</span>
                </div>
                <div>
                    <span>123</span>
                    <span>seguindo</span>
                </div>
                <div>
                    <span>235</span>
                    <span>seguidores</span>
                </div>
            </div>
            <div class="extra_inf">
                <span>@ViewBag.Nome</span>
                <a asp-area = "" asp-controller = "Edicao" asp-action = "Index">Editar Perfil</a>
                <a asp-are = "" asp-controller = "Login" asp-action = "Logout">Sair</a>
            </div>

        </div>
    </section>

    <section class="post_informations">
        <div class="publicacoes">
            <img src="~/imgPerfil/image 1.png" alt="">
            <h2>publicações</h2>
        </div>



         


        @foreach (var post in ViewBag.Perfil)
        {
        <div class="posts">
            <div class="imagem_feed"><img style="width: 100%; height: 100%;" src="~/img/Feed/@post.Imagem" alt="Post"></div>
             <div class="post_data">

                <div class="user_post">
                    <div class="photo_post"></div>
                    <div class="user_data">
                        <h3>@post.UserName</h3>
                        <span>Aldeia da folha,konoha</span>
                    </div>
                </div>

                <div class="inf_post">
                    <img class="heart_post" src="~/imgPerfil/VectorCoração.png" alt="">
                    <img class="comment" src="~/imgPerfil/VectorComentario.png" alt="">
                    <span>Muitas curtidas kkkk</span>
                </div>

                <ul class="comments">
                    <li class="user_comment">Aleatório</li>
                    <li class="comment_data">Fera!</li>
                    <li><img src="img/Vector.png" alt=""></li>
                    <li class="user_comment">Aleatório</li>
                    <li class="comment_data">Fera!</li>
                    <li><img src="img/Vector.png" alt=""></li>
                    <li class="user_comment">Aleatório</li>
                    <li class="comment_data">Fera!</li>
                    <li><img src="img/Vector.png" alt=""></li>
                    <li class="user_comment">Aleatório</li>
                    <li class="comment_data">Fera!</li>
                    <li><img src="img/Vector.png" alt=""></li>
                </ul>
                <span class="more_comments">Mais comentários</span>
            </div>
            </div>
        }
        </div>
    </section>
</div>
